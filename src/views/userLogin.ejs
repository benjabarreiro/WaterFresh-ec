<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Water Fresh</title>
    
        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@500&display=swap" rel="stylesheet">
    
        <!-- Bootstrap.css -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
        <!-- Styles.css -->
        <link rel="stylesheet" href="/css/main.css">

        <script
        src="https://kit.fontawesome.com/16dbabfb07.js"
        crossorigin="anonymous"
        ></script>
    </head>
    <body>
        <%- include('partials/header.ejs') %> 

        <section class="form-section-logIn">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-8 first">
                        <div class="img-container">
                            <img src="/images/mountains-iniciosesion.jpg" alt="">
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-4">
                        <div class="form-container_2">
                            <form action="/users/logIn" method="POST">
                                <h1>Inicio de sesión</h1>
                                <% if(typeof errors != 'undefined') { %> 
                                    <p style="color: red;">ERROR</p>
                                    <ul>
                                        <% for(let i=0; i<errors.length; i++) { %>
                                            <li><%= errors[i].msg %> </li>
                                        <% } %>  
                                    </ul>
                                <% } %> 
                                <label class="info" for="">Email</label>
                                <input class="info" type="email" name="email" placeholder="Introduzca su email...">
                                <label class="info" for="">Contraseña</label>
                                <input class="info" type="password" name="password" placeholder="Introduzca su contraseña...">
                                <div class="remember">
                                    <label class="remember" for="">Recordame</label>
                                    <input type="checkbox" class="checkbox">
                                </div>
                                <div class="button-form-container">
                                    <button type="submit">Iniciar Sesión</button>
                                </div>
                                <div class="a-form-container">
                                    <a href="/users/registration">¿Nuevo por acá? Registrate</a><br>
                                    <a href="">¿Olvidaste tu contraseña?</a>
                                </div>
                                <br>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>